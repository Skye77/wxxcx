.login_page{
	display: flex;
	flex-direction: column;
}
.login_title{
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	margin-top:150rpx;
}
.title_we{
	font-size: 50rpx;
	font-weight: bold;
	font-family: "Microsoft YaHei";
	color: #48C23D;
}
.login_from{
	display: flex;
	flex-direction: column;
	height: 200rpx;
	width:90%;
	margin:30rpx auto;
	border:2rpx solid #999;
	border-radius:8rpx;
	background-color: #fff;
}
.lo_input{
	display: flex;
	height: 49%;
	padding-left:20rpx;
	text-align: left;
}
.lo_input:nth-of-type(1){
	border-bottom: 2rpx solid #999;
	font-size: 34rpx;
	color: #000;
}
.lo_input:nth-of-type(2){
	font-size: 34rpx;
	color: #666;
}
.denglu{
	height: 80rpx;
	width: 90%;
	margin: 0 auto;
	background-color: #48C23D;
	text-align: center;
	line-height: 80rpx;
	border-radius: 8rpx;
	font-size: 40rpx;
	font-family: "Microsoft YaHei";
	color: #fff;
	letter-spacing: 4rpx;
	font-weight: bold;
}
.login_btn{
	display: flex;
	flex-direction:row;
	justify-content: center;
	height: 100rpx;
	width: 90%;
	font-size: 34rpx;
	margin:10rpx auto;
}
.click_btn{
	height: 50%;
	padding:0 40rpx;
	margin-top: 25rpx;
	line-height: 50rpx;
	color: #666;
}
.ac{
	color: #48C23D;
}
.click_btn:nth-of-type(1){
	border-right: 2rpx solid #999;
}
.weixin_db{
	position: fixed;
	left:50%;
	bottom: 20rpx;
	transform: translateX(-45%);
	font-size:36rpx;
}
.weixin_btn{
	margin: 0 30rpx;
}
.weibo{
	height:40rpx;
	width:40rpx;
	margin-top: 4rpx;
	margin-right: -50rpx;
}
.userN{
	font-size:40rpx;
	font-weight: bold;
	color:deeppink;
}