.mine_head{
	background: #F8F8F8;
}
.mine_head_top{
	display: flex;
	flex-direction: row;
	flex: 1;
	height:240rpx;
	width: 100%;
	background:#F89D4C;
	border-top: 1px solid #398645;
}
.proPic{
	height:164rpx;
	width:164rpx;
	border:8rpx solid #fff;
	border-radius: 50%;
	margin:30rpx;
}
.user_info{
	display: flex;
	flex-direction: column;
	width:40%;
}
.uesr_name{
	display:block;
	font-size:40rpx;
	height: 60rpx;
	margin-top:30rpx;
	line-height: 60rpx;
	color:#fff;
	/*font-weight: bold;*/
	font-family: "Microsoft YaHei";
}
.user_id{
	display:block;
	font-size: 28rpx;
	color: #fff;
	height: 50rpx;
	line-height: 50rpx;
	margin-bottom: 30rpx;
}
.user_focus{
	display: flex;
	flex-direction: row;
	font-size: 28rpx;
	color: #fff;
}
.prolife{
	display: flex;
	/*align-content: center;*/
	font-size:36rpx;
	color: #fff;
	line-height: 240rpx;
}
